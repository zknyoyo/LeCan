@model LeCan.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<div class="row">
    <div id="placeholder" class="col-md-5 col-md-offset-1" ><img class="middle_size" src=@Url.Content("~/Images/text-logo.png") /></div>
    <div id="login_regis_form" class="col-md-4">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">登录</a></li>
            <li><a href="#">注册</a></li>
        </ul>
        <br /><br />
        <form class="form-horizontal" role="form" action=@Url.Content("~/account/login") method="post">
            <div class="form-group">
                <label for="inputName" class="col-sm-3 control-label">用户名:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputName" placeholder="用户名">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="col-sm-3 control-label">密码:</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" id="inputPassword" placeholder="密码">
                </div>
            </div>
            <br />
            <div class="form-group text-center">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-default">登录</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
