
@{
    ViewBag.Title = "Log in";
}

<div id="login_body" class="row">
    <div id="placeholder" class="col-md-5 col-md-offset-1" ><img class="middle_size" src=@Url.Content("~/Images/text-logo.png") /></div>
    <div id="login_regis_form" class="col-md-4 col-md-offset-1">
        <ul class="nav nav-tabs nav-justified">
            <li class="active"><a href=@Url.Content("~/account/login")>登录</a></li>
            <li><a href="#">注册</a></li>
        </ul>
        <form class="form-horizontal div_border" role="form" action=@Url.Content("~/account/login") method="post" >
            <div class="form-group">
                <label for="inputName" class="col-sm-3 control-label">用户名:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputName" name="inputName" placeholder="用户名">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="col-sm-3 control-label">密码:</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" id="inputPassword" name="inputPassword" placeholder="密码">
                </div>
            </div>
            <br />
            <div class="form-group text-center">
                <div class="col-sm-12">
                    <button type="submit" class="button button-flat-primary ">登录</button>
                </div>
            </div>
            @if(ViewBag.isError!=null)
            {
                <div class="text-warning"> @ViewBag.isError </div>
            }
        </form>

    </div>
</div>

@section Scripts {
}
